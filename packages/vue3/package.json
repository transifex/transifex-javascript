{
  "name": "@transifex/vue3",
  "version": "5.3.0",
  "description": "Vue3 i18n framework using Transifex Native",
  "keywords": [
    "transifex",
    "i18n",
    "l10n",
    "localization",
    "internationalization",
    "globalization",
    "translation",
    "vue",
    "vue.js"
  ],
  "author": "Transifex",
  "homepage": "https://github.com/transifex/transifex-javascript/tree/master/packages/vue3",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": "git://github.com/transifex/transifex-javascript.git",
  "bugs": {
    "url": "https://github.com/transifex/transifex-javascript/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "dist/index.js",
  "source": "src/index.js",
  "scripts": {
    "lint": "eslint src/ tests/",
    "build": "NODE_ENV=production rollup -c --bundleConfigAsCjs",
    "test": "run-s test:unit test:build",
    "test:build": "run-s build",
    "test:unit": "jest --coverage=true --forceExit",
    "publish-npm": "npm publish"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    },
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@transifex/native": "^5.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/vue": "^6.6.1",
    "@transifex/native": "^5.3.0",
    "@vue/compiler-sfc": "^3.2.45",
    "@vue/vue3-jest": "^29.2.0",
    "babel-jest": "^29.3.1",
    "eslint": "^8.28.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^3.4.0",
    "rollup-plugin-vue": "^6.0.0",
    "vue": "^3.2.45"
  }
}
